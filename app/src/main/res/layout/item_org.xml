<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_org"
            android:layout_width="70dp"
            android:layout_height="70dp"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_org_name"
                style="@style/TextView_NewsItem"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_score"
                    style="@style/TextView_NewsItem"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:text="" />
                <TextView
                    android:id="@+id/text_type"
                    style="@style/TextView_NewsItemZhaiYao"
                    android:layout_weight="1"
                    android:text="" />
                <TextView
                    android:id="@+id/text_juli"
                    style="@style/TextView_NewsItemZhaiYao"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20km" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_area1"
                    style="@style/TextView_NewsItemZhaiYao"
                    android:layout_weight="2"
                    android:text="" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_area2"
                    style="@style/TextView_NewsItemZhaiYao"
                    android:layout_weight="1"
                    android:text="北蔡" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="9dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/login_input_shape"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="旧  密  码"
            android:textColor="@color/gray"
            android:textSize="@dimen/register_info_size" />

        <EditText
            android:id="@+id/edit_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/edit_shape"
            android:ems="12"
            android:hint="输入您的原始密码"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/lightgray"
            android:textSize="@dimen/register_info_size"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/login_input_shape"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="新  密  码"
            android:textColor="@color/gray"
            android:textSize="@dimen/register_info_size" />

        <EditText
            android:id="@+id/edit_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/edit_shape"
            android:ems="12"
            android:hint="@string/register_password_hint"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/lightgray"
            android:textSize="@dimen/register_info_size"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/login_input_shape"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="5dp"
            android:text="确认密码"
            android:textColor="@color/gray"
            android:textSize="@dimen/register_info_size" />

        <EditText
            android:id="@+id/edit_new_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/edit_shape"
            android:ems="12"
            android:hint="@string/register_confirm_password_hint"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/lightgray"
            android:textSize="@dimen/register_info_size"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/complete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_selector"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>



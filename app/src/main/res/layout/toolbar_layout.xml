<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/leftBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/back_btn_selector"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_left1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:text="按钮1"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/leftBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <EditText
        android:id="@+id/search_titleView"
        android:drawableRight="@mipmap/find_search_icon"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="10dp"
        android:background="@mipmap/search_bg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:hint="搜索名称,地区"
        android:ems="14"
        android:textColorHint="@color/white"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:layout_marginRight="5dp" />
    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="标题"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />


    <TextView
        android:id="@+id/right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:text="按钮1"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/rightBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:text="按钮2"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/rightBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />


</android.support.v7.widget.Toolbar>
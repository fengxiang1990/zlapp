<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_header_left"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="4dp" />

        <LinearLayout
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:padding="8dp"
                android:background="@color/white"
                android:gravity="left"
                android:id="@+id/text_left_content"
                android:text="这个老师上课很认真\n这个老师上课很认真\n这个老师上课很认真"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_left_comment"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:layout_width="160dp"
                android:layout_height="160dp"
                fresco:roundAsCircle="false"
                fresco:roundingBorderColor="@color/white"
                fresco:roundingBorderWidth="4dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/right"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:padding="8dp"
                android:background="@color/white"
                android:gravity="right"
                android:id="@+id/text_right_content"
                android:text="这个老师上课很认真\n这个老师上课很认真\n这个老师上课很认真"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_right_comment"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:layout_width="160dp"
                android:layout_height="160dp"
                fresco:roundAsCircle="false"
                fresco:roundingBorderColor="@color/white"
                fresco:roundingBorderWidth="4dp" />

        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_header_right"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="4dp" />
    </LinearLayout>
</LinearLayout>